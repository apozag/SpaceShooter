<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".counter.GameOverFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/activity_vertical_margin2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/points" />

    <TextView
        android:id = "@+id/points_text"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin2"
        android:layout_marginTop="@dimen/activity_vertical_margin3"
        android:text="0"
        android:textSize="36sp" />

    <Button
        android:id="@+id/go_to_menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:text="@string/go_to_menu"
        android:layout_gravity="center"
        />

</FrameLayout>